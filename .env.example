# Discord Bot Configuration
# Copy file này thành .env và điền thông tin của bạn

# Discord Bot Token (BẮT BUỘC)
# Lấy từ: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Bot Settings
DEBUG=True
LOG_LEVEL=INFO
PREFIX=!

# Bot Activity
ACTIVITY_TYPE=playing
ACTIVITY_NAME=Discord Bot

# Embed Settings
EMBED_COLOR=3498db

# Command Settings
COMMAND_COOLDOWN=3
MAX_MESSAGE_LENGTH=2000

# Permissions
GUILD_ONLY=False
DEFAULT_PERMISSIONS=0